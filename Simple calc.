

#include <iostream>

using namespace std;

int main() 
{
	char statement[100];
	int op1, op2;
	char operation;
	char answer; 
	do
	{
		cout << "Enter expression" << endl;
		cin >> op1 >> operation >> op2;

		if (operation == '+'); {
			cout << op1 << " + " << op2 << " = " << op1 + op2 << endl; 
		}
		if (operation == '-'); {
			cout << op1 << " - " << op2 << " = " << op1 - op2 << endl; 
		}
		if (operation == '*'); {
			cout << op1 << " / " << op2 << " = " << op1 * op2 << endl; 
		}
		if (operation == '/'); {
			cout << op1 << " * " << op2 << " = " << op1 / op2 << endl; 
		cout << "Do you wish to evaluate another expression? " << endl;
		cin >> answer;

	} while (answer == 'Y' || answer == 'y'); 
	if (answer == 'N' || answer == 'n') {
		cout << "Program finished";
	}
	return 0; 
